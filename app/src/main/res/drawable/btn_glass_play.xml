<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00"/> <stroke android:width="4dp" android:color="#FFFFFF"/> <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCFFCC"/> <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green_success"/> <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>