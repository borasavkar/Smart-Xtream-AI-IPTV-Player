<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4DFFFFFF" /> <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/neon_blue" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <corners android:radius="12dp" />
            <stroke android:width="3dp" android:color="@color/neon_green" /> </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" /> <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#1AFFFFFF" />
        </shape>
    </item>
</selector>