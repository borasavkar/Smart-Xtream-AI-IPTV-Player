<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item android:top="-2dp" android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
                <shape>
                    <solid android:color="#00000000"/>
                    <stroke android:width="3dp" android:color="@color/neon_blue"/> <corners android:radius="26dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#40FFFFFF"/> <corners android:radius="24dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#40FFFFFF"/>
            <corners android:radius="24dp"/>
            <stroke android:width="2dp" android:color="@color/neon_green"/> </shape>
    </item>

    <item android:drawable="@drawable/bg_liquid_glass"/>
</selector>