<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PlayerActivity">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:resize_mode="fit"
        app:show_buffering="when_playing"
        app:use_controller="true"
        app:show_timeout="5000" />

    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_favorite_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_card_selector"
            android:src="@drawable/ic_heart_outline"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:focusable="true"
            android:contentDescription="@string/btn_add_favorites"/>

        <ImageButton
            android:id="@+id/btn_subtitle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_card_selector"
            android:src="@android:drawable/ic_menu_sort_alphabetically"
            app:tint="@color/white"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:focusable="true"
            android:contentDescription="@string/sub_settings"/>

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_card_selector"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="@color/white"
            android:padding="12dp"
            android:focusable="true"
            android:contentDescription="@string/image_sound_settings"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_controls">

        <TextView
            android:id="@+id/text_network_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_3d"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="@string/network_speed"
            android:textColor="@color/neon_green"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_video_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_3d"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Wait..."
            android:textColor="#FFEB3B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_selector"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@color/white"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/btn_back"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_card_selector"
        app:backgroundTint="@null"
        android:text="@string/btn_next_episode"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>